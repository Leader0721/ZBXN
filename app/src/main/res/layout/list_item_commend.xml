<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mPortrait"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:src="@mipmap/userhead_img"
                app:civ_border_color="@color/app_divider"
                app:civ_border_overlay="true"
                app:civ_border_width="1px"
                app:civ_fill_color="@color/pub_backgroud_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tv_commend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/tvc9"
                    android:textSize="@dimen/app_text_15" />

                <TextView
                    android:id="@+id/tv_commend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="11-09 14:17"
                    android:textColor="@color/tvc9"
                    android:textSize="@dimen/app_text_14" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_commend_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/parent_margin_top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/parent_margin"
            android:text="已接受任务"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_16_middle" />

    </LinearLayout>


</LinearLayout>