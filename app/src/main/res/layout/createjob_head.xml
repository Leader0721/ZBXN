<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical">
    <!-- 职位名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/parent_margin"
            android:gravity="fill_horizontal|center_vertical"
            android:text="职位名称"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_jobName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入职位名称"
            android:textColor="@color/tvc3"
            android:textColorHint="@color/tvcc"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/parent_margin"
            android:text="职位描述"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginLeft="@dimen/parent_margin"
            android:layout_marginRight="@dimen/parent_margin"
            android:background="@drawable/bg_edittext_shape"
            android:gravity="left|top"
            android:hint="请输入职位描述..."
            android:inputType="textMultiLine"
            android:minLines="6"
            android:padding="@dimen/parent_margin"
            android:textColor="@color/tvc3"
            android:textColorHint="@color/tvcc"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/parent_margin"
        android:text="权限设置"
        android:textColor="@color/tvc3"
        android:textSize="@dimen/app_text_14" />

</LinearLayout>
