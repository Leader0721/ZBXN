<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/mComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_white_edittext"
            android:gravity="top"
            android:hint="请输入评论内容"
            android:lineSpacingExtra="4dp"
            android:maxLength="10000"
            android:minLines="5"
            android:padding="@dimen/parent_margin"
            android:textColor="@color/tvc6"
            android:textColorHint="@color/tvcc"
            android:textSize="@dimen/app_text_13" />
    </ScrollView>

</LinearLayout>