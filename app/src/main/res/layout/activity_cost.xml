<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花费项目\u3000\u3000\u3000"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/app_text_14" />

            <EditText
                android:id="@+id/et_project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_inviteempl"
                android:hint="必填"
                android:textColor="@color/tvc6"
                android:textColorHint="@color/tvcc"
                android:textSize="@dimen/app_text_13" />
        </LinearLayout>
        <View
            android:background="@color/pub_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额 (元)\u3000\u3000\u3000"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/app_text_14" />

            <EditText
                android:id="@+id/et_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_inviteempl"
                android:hint="必填"
                android:maxLength="8"
                android:inputType="datetime"
                android:textColor="@color/tvc6"
                android:textColorHint="@color/tvcc"
                android:textSize="@dimen/app_text_13" />
        </LinearLayout>
        <View
            android:background="@color/pub_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花费时间\u3000\u3000\u3000"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/app_text_14" />

            <TextView
                android:id="@+id/et_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_inviteempl"
                android:text="必填"
                android:textColor="@color/tvc6"
                android:textColorHint="@color/tvcc"
                android:textSize="@dimen/app_text_13" />
        </LinearLayout>
        <View
            android:background="@color/pub_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"/>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_white_edittext"
            android:gravity="top"
            android:hint="点击填写备注"
            android:lineSpacingExtra="4dp"
            android:maxLength="100"
            android:minLines="5"
            android:padding="@dimen/parent_margin"
            android:textColor="@color/tvc6"
            android:textColorHint="@color/tvcc"
            android:textSize="@dimen/app_text_13" />
    </LinearLayout>

</LinearLayout>