<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/mIamge"
                android:layout_marginRight="5dp"
                android:src="@mipmap/userhead_img"/>
            <TextView
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:id="@+id/mNumber"
                android:background="@drawable/bg_circle_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="12"
                android:textSize="@dimen/app_text_8"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/mName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="统帅"
        android:textColor="@color/tvc3"
        android:textSize="@dimen/app_text_14"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/mState"
        android:src="@mipmap/add_circle"/>
</LinearLayout>
