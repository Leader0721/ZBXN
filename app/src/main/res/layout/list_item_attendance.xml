<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_in_line"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/parent_margin_large"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_in_line_top"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/parent_margin_top"
                android:layout_weight="1"
                android:background="@color/bg_textview_blue" />

            <ImageView
                android:id="@+id/img_in_head"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/attendance_time" />

            <TextView
                android:id="@+id/tv_in_head"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/attendance_circle_blue"
                android:gravity="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_in_line_bottom"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/parent_margin_top"
                android:layout_weight="1"
                android:background="@color/bg_textview_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginLeft="@dimen/parent_margin_top"
            android:layout_marginTop="@dimen/parent_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/parent_margin_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_in_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到:"
                    android:textColor="@color/tvc3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-19 08:45"
                    android:textColor="@color/tvc3" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_in_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/parent_margin_top"
                android:text=""
                android:textColor="@color/tvc6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginRight="@dimen/parent_margin_large"
            android:layout_marginTop="@dimen/parent_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_in_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=""
                android:textColor="@color/bg_textview_blue" />

            <TextView
                android:id="@+id/tv_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/parent_margin_top"
                android:background="@drawable/selector_btn_orange"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="@dimen/parent_margin_top"
                android:paddingRight="@dimen/parent_margin_top"
                android:paddingTop="1dp"
                android:text="申诉"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/pub_backgroud_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_out_line"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/parent_margin_large"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_out_line_top"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/parent_margin_top"
                android:layout_weight="1"
                android:background="@color/bg_textview_blue" />

            <TextView
                android:id="@+id/tv_out_head"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/attendance_circle_blue"
                android:gravity="center" />

            <ImageView
                android:id="@+id/img_out_line_bottom"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/parent_margin_top"
                android:layout_weight="1"
                android:background="@color/bg_textview_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginLeft="@dimen/parent_margin_top"
            android:layout_marginTop="@dimen/parent_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/parent_margin_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_out_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签退:"
                    android:textColor="@color/tvc3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-19 08:45"
                    android:textColor="@color/tvc3" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_out_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/parent_margin_top"
                android:text=""
                android:textColor="@color/tvc6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginRight="@dimen/parent_margin_large"
            android:layout_marginTop="@dimen/parent_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_out_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=""
                android:textColor="@color/bg_textview_blue" />

            <TextView
                android:id="@+id/tv_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/parent_margin_top"
                android:background="@drawable/selector_btn_orange"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="@dimen/parent_margin_top"
                android:paddingRight="@dimen/parent_margin_top"
                android:paddingTop="1dp"
                android:text="申诉"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>